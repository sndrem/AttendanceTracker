extends layout

block content
    h3 #{model.title} #{model.user}
    h4 Your seminars
    a(href="#")#addGroup Search for Groups
    table#seminarTable.table-hover.table.table-responsive.hide
        thead
            tr
                th Course ID
                th Name
        tbody
    section.seminars.row
        for seminar in model.seminars
            .col-xs-12.col-sm-12.col-md-6.col-lg-4
                .thumbnail
                    a(href="/seminarDetails/#{seminar.semGrID}")
                        h4 #{seminar.name}
                    ul
                        li #{seminar.courseID}
                        li Name: #{seminar.name}
                    p
                        a(href="/removeSeminar/#{seminar.semGrID}").btn.btn-danger Remove Seminar

