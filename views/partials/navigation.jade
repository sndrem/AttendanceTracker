block navigation
    nav.navbar.navbar-default
            .container-fluid
                .navbar-header
                    button(type="button", data-toggle="collapse" data-target="#navbar-collapse" , aria-expanded="false").navbar-toggle.collapsed
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a(href="/").navbar-brand Foribus

                .collapse.navbar-collapse#navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        li
                            if user != null
                                if user.adminType === 'master'
                                    a(href="/admin/dashboard")
                                        i.material-icons &#xE851;
                                        | Dashboard
                                else if user.adminType === 'assistent'
                                    a(href="/assistant/dashboard")
                                        i.material-icons &#xE851;
                                        | Dashboard
                                else 
                                    a(href="/student/dashboard")
                                        i.material-icons &#xE851;
                                        | Dashboard

                                li
                                    a(href="/logout")
                                        i.material-icons &#xE879;
                                        | Log out

                            else
                                li
                                    a(href="/login")
                                        i.material-icons &#xE88A 
                                        | Log in
