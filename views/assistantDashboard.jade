extends layout

block content
    h3 #{title}: #{user.fName} #{user.lName}
    include ./partials/dashboardNavElements

    .row
        .col-xs-12.col-sm-6.col-md.4
            .thumbnail
                .caption
                    h3 Take Attendance
                    p  Press the button to take attendance for a group of your choice

                    p: a(href="/assistant/registerAttendance").btn.btn-primary Select course and group
        .col-xs-12.col-sm-6.col-md.4
            .thumbnail
                .caption
                    h3 Create a new seminar group
                    p Is there a seminar group missing? Create a new one now!

                    p: a(href="/common/createNewSeminarGroup").btn.btn-primary Create new seminar group
        .col-xs-12.col-sm-6.col-md.4
            .thumbnail
                .caption
                    h3 Update your first name, last name and email
                    p: a(href="/updateProfile").btn.btn-primary Update your profile

            

