extends layout
block content
    h3 #{title}
    include ./partials/dashboardNavElements
    
    p.special Total number of seminars: #{numOfSeminars}
    table.table.table-hover
        thead
            tr
                th Name
                th Attended
                th Been away
                th Total
        tbody

        for student in students
            if student.away <= 0
                tr(data-student_id="#{student.StudID}").success
                    td #{student.fullName}
                    td #{student.met}
                    td #{student.away}
                    td #{student.totalAttendance}
            else 
                tr(data-student_id="#{student.StudID}").warning
                    td #{student.fullName}
                    td #{student.met}
                    td #{student.away}
                    td #{student.totalAttendance}
